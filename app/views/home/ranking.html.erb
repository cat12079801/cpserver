<table class="highlight">
  <thead>
    <tr>
      <th>順位</th>
      <th>ユーザ名</th>
      <th>得点</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index(1) do |user, i| %>
      <tr>
        <td><%= i %></td>
        <td><%= user.name %></td>
        <td><%= user.point %></td>
      </tr>
    <% end %>
  </tbody>
</table>
